<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.PilihLaporanController"
            prefWidth="500" prefHeight="300"
            style="-fx-background-color: #f0f8ff;">

    <VBox fx:id="rootVBox" alignment="CENTER" spacing="20"
          layoutX="30" layoutY="40" prefWidth="440" prefHeight="220">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>

        <Label text="📝 Laporan Aktivitas Siswa"
               style="-fx-font-size: 22px; -fx-text-fill: #4682B4;" />

        <HBox spacing="10" alignment="CENTER">
            <Label text="Pilih Materi:" style="-fx-font-size: 14px;" />
            <ComboBox fx:id="materiComboBox" prefWidth="250" />
        </HBox>

        <Button fx:id="lihatLaporanButton"
                text="Lihat Laporan"
                onAction="#handleLihatLaporan"
                style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Button fx:id="kembaliButton"
                text="Kembali"
                onAction="#handleKembali"
                style="-fx-background-color: transparent; -fx-text-fill: #4682B4;" />
    </VBox>
</AnchorPane>